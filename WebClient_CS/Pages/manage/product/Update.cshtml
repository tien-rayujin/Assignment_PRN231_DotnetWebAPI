@page
@model WebClient_CS.Pages.manage.product.UpdateModel
@{
}

<section class="bg-white">
    <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16 border border-slate-400 rounded-xl my-16">
        <div class="w-full flex items-center justify-between">
            <h2 class="mb-4 text-xl font-bold text-gray-900">Update Product</h2>
            <a asp-area="" asp-page="/manage/product/Index" class="mb-4 text-base text-slate-700">&lt; Back to List</a>
        </div>
        <form method="POST">
            <input type="hidden" name="ProductId" asp-for="RequestModel.ProductId" />
            <div class="grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5">
                <div class="sm:col-span-2">
                    <label for="name" class="block mb-2 text-sm font-medium text-gray-900 ">Product Name</label>
                    <input type="text" name="Name" asp-for="RequestModel.Name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-600 focus:border-green-600 block w-full p-2.5 " placeholder="Type product name" required="">
                </div>
                <div class="w-full">
                    <label for="price" class="block mb-2 text-sm font-medium text-gray-900 ">Price</label>
                    <input type="number" name="Price" asp-for="RequestModel.Price" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-600 focus:border-green-600 block w-full p-2.5 " placeholder="Price" required="">
                </div>
                <div class="w-full">
                    <label for="description" class="block mb-2 text-sm font-medium text-gray-900 ">Description</label>
                    <input type="text" name="Description" asp-for="RequestModel.Description" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-600 focus:border-green-600 block w-full p-2.5 " placeholder="Description" required="">
                </div>
                <div>
                    <label for="category" class="block mb-2 text-sm font-medium text-gray-900 ">Category</label>
                    <select name="CategoryId" asp-for="RequestModel.CategoryId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5 ">
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.CategoryId">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="flex items-center space-x-4">
                <button type="submit" class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                    Update product
                </button>
            </div>
        </form>
    </div>
</section>
